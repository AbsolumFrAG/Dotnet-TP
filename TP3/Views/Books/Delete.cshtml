@model Book

@{
    ViewData["Title"] = "Supprimer le livre";
}

<h1>Supprimer le livre</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce livre ?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Titre</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
        <dt class="col-sm-2">Auteur</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Author)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div>